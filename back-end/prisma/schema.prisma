generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id  String @id @default(cuid())
  title String
  description String 
  images String[] @default([])
  lat  Float 
  long Float
  createdAt DateTime @default(now())
  category Category @default(OTHER)
}

model Person {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
}

enum Category {
  POTHOLE
  STREET_LIGHT
  GRAFFITI
  ACCIDENT
  FLOOD
  GARBAGE
  FALLEN_TREE
  OTHER
}
